{% extends 'base.html.twig' %}

{% block title %}Produit
	{{ product.title }}
{% endblock %}

{% block body %}
	<div class="flex">
		<aside class="w-1/4 p-10 bg-gray-100">
			<div class="rounded-lg overflow-hidden shadow-md">
				<h2 class="text-2xl font-semibold mb-4 p-4 bg-green-500 text-white">Catégories</h2>
				<ul class="p-4">
					{% for category in categories %}
						<li class="mb-2">
							<a href="{{ path('products_in_category', {'id': category.id}) }}" class="text-black hover:text-white hover:bg-green-500 transition duration-200 rounded">{{ category.name }}</a>
						</li>
					{% endfor %}
				</ul>
			</div>
		</aside>

		<main>
			<h2 class="text-3xl font-semibold mb-4">{{ product.title }}</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<div class="bg-white rounded-lg overflow-hidden shadow-md">
					<div class="grid grid-cols-1 gap-4">
						{% for image in product.images %}
							<img src="{{ image }}" alt="{{ product.title }}" class="w-full h-48 object-cover mb-2 transition duration-300 transform hover:scale-105">
						{% endfor %}
					</div>
				</div>
				<div class="p-4">
					<h3 class="text-xl font-semibold mb-2">{{ product.title }}</h3>
					<p class="text-gray-700">{{ product.description }}</p>
					<div class="flex items-center mt-4">
						<p class="text-green-500 font-semibold">Prix :</p>
						<span class="text-lg font-bold ml-2">{{ product.price }}
							€</span>
					</div>
					<p class="text-blue-500 font-semibold mt-2">Catégorie :
						{{ product.category.name }}</p>
					<button class="mt-4 bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-full transition duration-300">Ajouter au panier</button>
				</div>
			</div>
		</main>
	</div>
{% endblock %}
